extends layout

block content
  h1= title

  if query
    p Query Rows: #{query.rows}, Query Columns: #{query.cols}
    - let rows = Number(query.rows)
    - let cols = Number(query.cols)

  - if (!Number.isInteger(rows) || !Number.isInteger(cols))
    p Invalid input: Rows and columns must be integers.

  - else if (rows < 1 || rows > 10)
    p Invalid input: Rows must be between 1 and 10.
    
  - else if (cols < 1 || cols > 10)
    p Invalid input: Columns must be between 1 and 10.
  - else
    table#outer
      - for (let i = 0; i < rows; i++){
        tr#middle
          - for (let j = 0; j < cols; j++){
            - let value = 0
            - if (i === j)
              - value = 1
            - else if (i === j + 1)
              - value = 2
            - else if (i === j - 1)
              - value = i
            td= value
            -}
        -}
