extends layout

block content
  h1= 'Choose'
  
  - var image_names = ['fettucine.jpg', 'spaghetti.jpg', 'rotini.jpg', 'fusili.jpg', 'linguine.jpg'];

  // Loop to generate random images
  - for (let i = 0; i < 3; i++)
    - var randomIndex = Math.floor(Math.random() * 5)
    img(src=`/images/${image_names[randomIndex]}`, alt=`${image_names[randomIndex]}`, height="300", width="300")
  
